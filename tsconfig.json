{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2016",     
        "module": "Node16",     
        "moduleResolution": "Node16", 
        "lib": ["ES2021"], 
        "outDir": "./dist",
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,  
        "strict": true,
        "allowSyntheticDefaultImports": true,  
        "forceConsistentCasingInFileNames": true,  
        "experimentalDecorators": true

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
 }